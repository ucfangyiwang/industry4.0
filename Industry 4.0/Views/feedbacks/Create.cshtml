@model Industry_4._0.Models.Feedback

@{
    ViewData["Title"] = "Create";
}
<div class="post">
<h1>Create your feedback</h1>
<hr id="cre"/>
    <
    <div class="row">

       
            <form asp-action="Create" href="~/Identity/Account/Login?returnUrl=~/Home/companiesandorganisations">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" disabled />
                    <span></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" disabled />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Heading" class="control-label"></label>
                    <input asp-for="Heading" class="form-control" />
                    <span asp-validation-for="Heading" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyOrganisationName" class="control-label"></label>
                    <select asp-for="CompanyOrganisationName" class="form-control">
                        <option value="selected disabled">Select a company or ornization</option>
                        <option>Amazon</option>
                        <option>CSIRO</option>
                        <option>Google</option>
                        <option>IBM</option>
                        <option>Microsoft</option>
                        <option>Department of Industry, Science, Energy and Resources</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="StarRating" class="control-label"></label>
                    <input asp-for="StarRating" class="form-control" />
                    <span asp-validation-for="StarRating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FEEdback" class="control-label"></label>
                    <textarea asp-for="FEEdback" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="FEEdback" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Agree" class="control-label"></label>
                    <input asp-for="Agree" class="form-control" disabled />
                    <span asp-validation-for="Agree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Disagree" class="control-label"></label>
                    <input asp-for="Disagree" class="form-control" disabled />
                    <span asp-validation-for="Disagree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
